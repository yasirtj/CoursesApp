@model IEnumerable<CoursesApp.Models.TraineeCourseModel>

@{
    ViewBag.Title = "Course Trainees";
}

<h2>Course Trainees</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().trainee.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().trainee.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Registeration_date)
        </th>
        <th></th>
    </tr>
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.trainee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.trainee.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Registeration_date)
                </td>

            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">
                <div class="alert alert-danger">No Trainees Enrolled In This Course!</div>
            </td>
        </tr>
    }

</table>
